{
  "manifest_version": 3,
  "name": "Leonardo.Ai",
  "description": "A lightweight Apollo Client DevTools alternative",
  "icons": {
    "128": "icon-128.png"
  },
  "action": {
    "default_popup": "src/pages/popup/index.html",
    "default_icon": "icon-32.png"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/pages/content/index.ts"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "src/pages/background/index.ts",
    "type": "module"
  },
  "devtools_page": "src/pages/devtools/index.html",
  "web_accessible_resources": [
    {
      "resources": [
        "injected.js",
        "assets/*",
        "icon-128.png",
        "icon-32.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}